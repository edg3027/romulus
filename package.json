{
  "name": "romulus-svelte",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env -- vite dev",
    "build": "vite build",
    "build:vercel": "pnpm build && pnpm db:migrate",
    "preview": "vite preview",
    "test": "pnpm run test:unit run && pnpm run test:e2e",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint": "prettier --check . && pnpm check && tsc --noEmit && eslint .",
    "format": "prettier --write .",
    "test:e2e": "pnpm test:e2e:migrate && playwright test",
    "test:e2e:dev": "pnpm test:e2e:migrate && NODE_ENV=development playwright test",
    "test:e2e:migrate": "dotenv -e .env.test -- pnpm db:migrate",
    "test:unit": "vitest",
    "db:migrate": "node ./src/lib/server/db/migrate.js",
    "db:generate": "drizzle-kit generate",
    "db:sync": "dotenv -e .env -- node ./src/lib/server/db/sync-prod.js"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.0",
    "@floating-ui/dom": "^1.6.10",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@neondatabase/serverless": "^0.9.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/ramda": "^0.30.1",
    "@types/swagger-ui": "^3.52.4",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "fast-deep-equal": "^3.1.3",
    "fastest-levenshtein": "^1.0.16",
    "lucia": "^3.2.0",
    "oslo": "^1.2.1",
    "phosphor-svelte": "^2.0.1",
    "postgres": "^3.4.4",
    "ramda": "^0.30.1",
    "string-similarity-js": "^2.1.4",
    "sveltekit-superforms": "^2.16.1",
    "swagger-ui": "^5.17.14",
    "tailwind-merge": "^2.5.2",
    "tippy.js": "^6.3.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@sveltejs/adapter-auto": "^3.2.4",
    "@sveltejs/kit": "^2.5.22",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/svelte": "^5.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^9.6.0",
    "@types/node": "^20.14.9",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.22.8",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^2.43.0",
    "globals": "^15.9.0",
    "jsdom": "^24.1.1",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.5",
    "tailwindcss": "^3.4.9",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "vite": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
