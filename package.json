{
  "name": "romulus-svelte",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env -- vite dev",
    "build": "vite build",
    "build:vercel": "pnpm build && pnpm migrate",
    "preview": "vite preview",
    "test": "pnpm run test:unit run && pnpm run test:e2e",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:e2e": "dotenv -e .env.test -- pnpm migrate && playwright test",
    "test:unit": "vitest",
    "migrate": "node ./src/lib/server/db/migrate.js",
    "generate": "drizzle-kit generate"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.6",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "@neondatabase/serverless": "^0.9.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/ramda": "^0.30.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.4",
    "fast-deep-equal": "^3.1.3",
    "fastest-levenshtein": "^1.0.16",
    "lucia": "^3.2.0",
    "oslo": "^1.2.1",
    "phosphor-svelte": "^2.0.1",
    "postgres": "^3.4.4",
    "ramda": "^0.30.1",
    "string-similarity-js": "^2.1.4",
    "sveltekit-superforms": "^2.15.2",
    "tailwind-merge": "^2.3.0",
    "tippy.js": "^6.3.7",
    "zod": "^3.23.8"
