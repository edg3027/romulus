{
  "name": "romulus-svelte",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env -- vite dev",
    "build": "vite build && cp -r ./src/lib/server/db/migrations ./build/server/migrations && cp -r ./src/lib/server/db/migrations ./.svelte-kit/output/server/migrations",
    "build:vercel": "pnpm build && pnpm db:migrate",
    "preview": "vite preview",
    "test": "pnpm run test:unit run && pnpm run test:e2e",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint": "prettier --check . && pnpm check && tsc --noEmit && eslint .",
    "format": "prettier --write .",
    "test:e2e": "playwright test",
    "test:e2e:dev": "NODE_ENV=development playwright test",
    "test:unit": "vitest",
    "db:migrate": "node ./src/lib/server/db/migrate.js",
    "db:generate": "drizzle-kit generate",
    "db:sync": "dotenv -e .env -- node ./src/lib/server/db/sync-prod.js",
    "docker:build": "docker build -t romulus .",
    "docker:run": "docker run --network host -p 3000:3000 --env-file .env.docker romulus"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.2.12",
    "@floating-ui/dom": "^1.6.11",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@tanstack/svelte-query": "^5.59.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/ramda": "^0.30.2",
    "@types/swagger-ui": "^3.52.4",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.2",
    "fast-deep-equal": "^3.1.3",
    "fastest-levenshtein": "^1.0.16",
    "lucia": "^3.2.2",
    "oslo": "^1.2.1",
    "phosphor-svelte": "^2.0.1",
    "postgres": "^3.4.4",
    "ramda": "^0.30.1",
    "string-similarity-js": "^2.1.4",
    "svelte-dnd-action": "^0.9.52",
    "sveltekit-superforms": "^2.20.0",
    "swagger-ui": "^5.17.14",
    "tailwind-merge": "^2.5.4",
    "tippy.js": "^6.3.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@sveltejs/adapter-node": "^5.2.5",
    "@sveltejs/kit": "^2.6.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/svelte": "^5.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.14.15",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^2.44.1",
    "globals": "^15.9.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.4",
    "tailwindcss": "^3.4.13",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0",
    "vite": "^5.4.8",
    "vitest": "^2.1.1"
  }
}
